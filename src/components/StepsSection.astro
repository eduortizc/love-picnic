---
// src/components/StepsSection.astro
const sandImage = '/images/arena.webp'; 

const STEPS = [
  {
    id: 1,
    title: "Elige tu Experiencia",
    desc: "Explora nuestro catálogo: Teepees, Picnics o Cinema. Selecciona el que más te enamore.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-9 h-9"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 21v-4.5a1.5 1.5 0 0 0-3 0V21m10.5 0L12 3 3 21h18ZM12 3l1.5-2M12 3l-1.5-2" /></svg>`
  },
  {
    id: 2,
    title: "Define el Lugar",
    desc: "En la playa, un parque o tu propio jardín. Dinos dónde y nosotros llevamos la magia.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" /></svg>`
  },
  {
    id: 3,
    title: "Personalizamos",
    desc: "¿Flores extra? ¿Una nota especial? Cualquier idea que se te ocurra, la podemos hacer realidad.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l2.846-.813a1.126 1.126 0 00.417-.386l5.179-8.15a.975.975 0 00-.144-1.286l-3.588-3.588a.975.975 0 00-1.286-.144l-8.15 5.179a1.125 1.125 0 00-.386.417zM15.75 11.25l-3.75 3.75" /></svg>`
  },
  {
    id: 4,
    title: "Llegas y Disfrutas",
    desc: "Todo estará montado y listo cuando llegues. Solo relájate y crea recuerdos inolvidables.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg>`
  }
];
---

<section class="py-32 px-6 relative overflow-hidden bg-[#0F1F38] border-t border-white/10">
    
    <div class="absolute inset-0 -z-50 h-full w-full">
        <div 
            class="absolute inset-0 bg-repeat filter blur-[3px] opacity-20 mix-blend-overlay"
            style={`background-image: url('${sandImage}'); background-size: 500px;`}
        ></div>
    </div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        <div class="text-center mb-24">
            <span class="text-picnic-gold uppercase tracking-[0.3em] text-xs font-bold animate-fade-in-up">Paso a Paso</span>
            <h2 class="text-3xl md:text-5xl font-serif text-white mt-3 mb-6 drop-shadow-lg">¿Cómo funciona?</h2>
            <div class="w-20 h-[1px] bg-picnic-gold mx-auto"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 md:gap-8 relative">
            
            <div class="hidden md:block absolute top-12 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-picnic-gold/30 to-transparent -z-10"></div>

            {STEPS.map((step, index) => (
                <div class="group relative flex flex-col items-center text-center">
                    
                    <div class="w-24 h-24 rounded-full bg-[#0B1829]/80 backdrop-blur-sm border border-picnic-gold/30 flex items-center justify-center mb-8 group-hover:scale-110 group-hover:border-picnic-gold group-hover:shadow-[0_0_25px_rgba(212,175,55,0.4)] transition-all duration-500 relative z-10 shadow-lg">
                        <div class="text-picnic-gold transform group-hover:rotate-6 transition-transform duration-500" set:html={step.icon}></div>
                    </div>

                    <h3 class="text-xl font-serif text-white mb-4 group-hover:text-picnic-gold transition-colors duration-300 drop-shadow-md">
                        {step.title}
                    </h3>
                    <p class="text-white/70 text-sm font-light leading-relaxed max-w-[240px]">
                        {step.desc}
                    </p>

                    {index !== STEPS.length - 1 && (
                        <div class="md:hidden text-picnic-gold/20 mt-10">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 animate-bounce"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" /></svg>
                        </div>
                    )}
                </div>
            ))}
        </div>

        <div class="mt-24 text-center">
            <a href="/catalogo" class="inline-block py-4 px-12 bg-transparent border border-picnic-gold text-picnic-gold hover:bg-picnic-gold hover:text-picnic-navy text-sm font-bold uppercase tracking-widest rounded-sm transition-all duration-300 hover:shadow-lg hover:shadow-picnic-gold/30 backdrop-blur-sm">
                Ver Catálogo y Reservar
            </a>
        </div>

    </div>
</section>