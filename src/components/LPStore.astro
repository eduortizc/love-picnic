---
// src/components/LPStore.astro

const ROSE_OPTIONS = [
    { label: "6 rosas" },
    { label: "12 rosas" },
    { label: "18 rosas" },
    { label: "24 rosas" },
    { label: "36 rosas" },
    { label: "50 rosas" }
];

const GIFTS = [
  {
    id: "lamp",
    title: "Lámpara LED",
    price: "$750",
    subtitle: "Lámpara Personalizada",
    description: "RGB (7 colores). Incluye control remoto y cable de corriente (También funciona con baterías).",
    image: "/images/Lpstore/lampara.webp",
    detail: "/images/Lpstore/lampara2.webp"
  },
  {
    id: "frame",
    title: "Cuadro Personalizado",
    price: "$410",
    subtitle: "Cuadro con Base",
    description: "Modelos: Instagramlove / Spotify. 14 x 20cm. Incluyen bastidores de acrílico.",
    image: "/images/Lpstore/cuadro.webp",
    detail: "/images/Lpstore/cuadro2.webp"
  },
  {
    id: "piggy",
    title: "Alcancía Vinil",
    price: "$480",
    subtitle: "Alcancía Personalizada",
    description: "Se personaliza a dos caras. Ideal para tus objetivos de ahorro.",
    image: "/images/Lpstore/alcancia.webp",
    detail: "/images/Lpstore/alcancia2.webp",
  }
];
---
  
<section class="py-16 md:py-1 px-4 relative"> 
    <div class="max-w-7xl mx-auto">
        
        <img 
              src="/images/Lpstore/lpStore.webp" 
              alt="Gift Shop Logo" 
              class="h-28 md:h-30 w-auto mx-auto pr-20 md:pr-0 md:ml-85 mb-9 drop-shadow-2xl object-contain hover:scale-105 transition-transform duration-500"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='block';"
          />
      
        <div class="mb-24">
            <div class="text-center mb-12"> 
                <p class="text-picnic-gold text-xs tracking-[0.3em] uppercase font-bold">Detalles Personalizados</p>
                <div class="w-12 h-[1px] bg-picnic-gold mx-auto mt-4 opacity-50"></div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8"> 
                {GIFTS.map((item) => (
                    <article class="group text-left bg-[#0F1F38]/80 backdrop-blur-md rounded-2xl overflow-hidden transition-all duration-500 relative z-0 hover:scale-[1.03] hover:shadow-picnic-gold/10 hover:shadow-2xl" id={`gift-${item.id}`}>
                        
                        <div class="relative h-80 overflow-hidden">
                            <img 
                                src={item.image} 
                                class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 opacity-90 group-hover:opacity-100 main-img" 
                                id={`main-img-${item.id}`}
                            />
                            
                            <div class="absolute inset-0"></div>
                            
                            <div 
                                class="absolute bottom-4 right-4 w-20 h-20 border border-white/30 shadow-lg overflow-hidden rounded-lg z-10 transition-transform duration-300 ease-out origin-bottom-right hover:scale-[1.1] md:hover:scale-[2.5] hover:z-50 hover:border-picnic-gold cursor-pointer bg-black/50"
                                onclick={`swapImage('${item.id}')`}
                            >
                                <img 
                                    src={item.detail} 
                                    class="w-full h-full object-cover detail-img" 
                                    id={`detail-img-${item.id}`}
                                />
                            </div>
                        </div>

                        <div class="p-6 relative z-20">
                            <div class="flex justify-between items-baseline mb-2">
                                <h5 class="text-xl font-serif text-white group-hover:text-picnic-gold transition-colors">{item.title}</h5>
                            </div>
                            <p class="text-gray-400 text-[10px] mb-3 font-bold uppercase tracking-wider">{item.subtitle}</p>
                            <p class="text-gray-300 text-sm font-light leading-relaxed border-t border-white/10 pt-3">
                                {item.description}
                            </p>
                            <button 
                                onclick={`addToCart({
                                    id: Date.now(),
                                    title: '${item.title.replace(/'/g, "\\'")}',
                                    price: '${item.price}',
                                    category: 'Regalo',
                                    description: '${item.description.replace(/'/g, "\\'")}',
                                    image: '${item.image}'
                                })`}
                                class="mt-4 w-full py-3 bg-picnic-gold/10 border border-picnic-gold text-picnic-gold hover:bg-picnic-gold hover:text-picnic-navy text-xs font-medium uppercase tracking-wider rounded transition-colors flex items-center justify-center gap-2"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                                </svg>
                                Agregar {item.price}
                            </button>
                        </div>
                    </article>
                ))}
            </div>
        </div>

        <div class="pt-1">
            <div class="text-center mb-12">
                <h2 class="text-sm font-bold tracking-[0.4em] text-white uppercase drop-shadow-md mt-2">
                    Sección de Flores
                </h2>
                <div class="w-24 h-[1px] bg-picnic-gold mx-auto mt-6"></div>
                <p class="text-white/70 mt-4 text-sm font-light italic">Agrega un detalle inolvidable a tu cotización.</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
                <article class="group bg-[#0F1F38]/80 backdrop-blur-md p-0 rounded-2xl shadow-xl transition-all duration-500 hover:scale-[1.03] hover:shadow-2xl overflow-hidden">
                    <div class="h-72 overflow-hidden relative">
                        <img src="/images/Lpstore/rosas.webp" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                        <div class="absolute inset-0"></div>
                    </div>
                    <div class="p-6 md:p-8">
                        <h4 class="text-2xl font-serif text-white mb-1 group-hover:text-picnic-gold transition-colors">Ramo de Rosas</h4>
                        <p class="text-[10px] text-picnic-gold uppercase tracking-widest mb-6 font-bold">El Clásico Romántico</p>
                        
                        <ul class="space-y-3 text-sm text-gray-300 font-light">
                            {ROSE_OPTIONS.map((p) => (
                                <li class="flex justify-between items-center border-b border-white/10 pb-2 border-dashed hover:text-white transition-colors">
                                    <span class="text-white/80">{p.label}</span> 
                                    <button onclick={`openRoseModal('${p.label}')`} class="text-[10px] px-4 py-1 bg-picnic-gold/10 border border-picnic-gold text-picnic-gold hover:bg-picnic-gold hover:text-picnic-navy rounded transition-colors flex items-center justify-center gap-1 ml-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg> Agregar
                                    </button>
                                </li>
                            ))}
                        </ul>
                    </div>
                </article>

                <article class="group bg-[#0F1F38]/80 backdrop-blur-md p-0 rounded-2xl shadow-xl transition-all duration-500 hover:scale-[1.03] hover:shadow-2xl overflow-hidden">
                    <div class="h-72 overflow-hidden relative grid grid-cols-2 gap-0.5">
                        <div class="relative w-full h-full overflow-hidden group/img">
                            <img src="/images/Lpstore/girasoles.webp" class="w-full h-full object-cover transition-transform duration-700 group-hover/img:scale-110" />
                            <span class="absolute bottom-2 left-2 bg-black/60 backdrop-blur-sm text-[8px] px-2 py-1 uppercase tracking-wider text-white font-bold rounded-sm">Clásico</span>
                        </div>
                        <div class="relative w-full h-full overflow-hidden group/img">
                            <img src="/images/Lpstore/girasolesBaby.webp" class="w-full h-full object-cover transition-transform duration-700 group-hover/img:scale-110" />
                            <span class="absolute bottom-2 left-2 bg-black/60 backdrop-blur-sm text-[8px] px-2 py-1 uppercase tracking-wider text-white font-bold rounded-sm">Baby</span>
                        </div>
                    </div>

                    <div class="p-6 md:p-8">
                        <h4 class="text-2xl font-serif text-white mb-1 group-hover:text-picnic-gold transition-colors">Girasoles</h4>
                        <p class="text-[10px] text-picnic-gold uppercase tracking-widest mb-6 font-bold">Alegría Pura</p>
                        
                        <ul class="space-y-3 text-sm text-gray-300 font-light">
                            {[
                                { label: "6 Girasoles", img: '/images/Lpstore/girasoles.webp' },
                                { label: "12 Girasoles", img: '/images/Lpstore/girasoles.webp' }
                            ].map((p) => (
                                <li class="flex justify-between items-center border-b border-white/10 pb-2 border-dashed hover:text-white transition-colors">
                                    <span class="text-white/80">{p.label}</span>
                                    <button onclick={`addToCart({title: 'Girasoles - ${p.label}', price: 'A cotizar', category: 'Flores', description: 'Alegría Pura', image: '${p.img}'})`} class="text-[10px] px-4 py-1 bg-picnic-gold/10 border border-picnic-gold text-picnic-gold hover:bg-picnic-gold hover:text-picnic-navy rounded transition-colors flex items-center justify-center gap-1 ml-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg> Agregar
                                    </button>
                                </li>
                            ))}
                        </ul>

                        <div class="mt-6 pt-4 border-t border-white/20">
                            <p class="text-xs text-white uppercase tracking-widest mb-3 font-bold">Opción "Baby"</p>
                            <ul class="space-y-3 text-sm text-gray-300 font-light">
                                {[
                                    { label: "6 Girasoles Baby" },
                                    { label: "12 Girasoles Baby" }
                                ].map((p) => (
                                    <li class="flex justify-between items-center border-b border-white/10 pb-2 border-dashed hover:text-white transition-colors">
                                        <span class="text-white/80">{p.label}</span>
                                        <button onclick={`addToCart({title: 'Girasoles - ${p.label}', price: 'A cotizar', category: 'Flores', description: 'Versión Baby', image: '/images/Lpstore/girasolesBaby.webp'})`} class="text-[10px] px-4 py-1 bg-picnic-gold/10 border border-picnic-gold text-picnic-gold hover:bg-picnic-gold hover:text-picnic-navy rounded transition-colors flex items-center justify-center gap-1 ml-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg> Agregar
                                        </button>
                                    </li>
                                ))}
                            </ul>
                        </div>
                    </div>
                </article>
            </div>
        </div>

    </div>
</section>

<div id="roseModal" class="fixed inset-0 z-[100] hidden bg-black/20 backdrop-blur-md flex items-center justify-center p-4">
    <div class="bg-[#0F1F38] rounded-xl shadow-2xl w-full max-w-md overflow-hidden transform transition-all scale-95 opacity-0 flex flex-col max-h-[85vh]" id="roseModalContent">
        <div class="h-48 shrink-0 bg-[url('/images/Lpstore/rosasGirasol.webp')] bg-cover bg-center relative">
            <div class="absolute inset-0"></div>
            <button onclick="closeRoseModal()" class="absolute top-4 right-4 text-white hover:text-picnic-gold bg-black/40 hover:bg-black/60 rounded-full p-2 backdrop-blur-md transition-all z-20">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>
            </button>
            <div class="absolute bottom-4 left-6 z-10">
                <h3 class="text-white font-serif text-2xl drop-shadow-lg leading-tight" id="modalRoseTitle">Ramo Seleccionado</h3>
            </div>
        </div>
        <div class="p-6 overflow-y-auto custom-scrollbar">
            <h4 class="text-white text-sm uppercase tracking-widest font-bold mb-2">¿Deseas agregar Girasoles?</h4>
            <p class="text-white/60 text-xs mb-5 font-light">Dale un toque de luz y alegría a tu ramo.</p>
            <div class="space-y-2 mb-6">
                <label class="flex items-center justify-between p-3 rounded-lg border border-white/10 hover:border-picnic-gold cursor-pointer bg-white/5 hover:bg-white/10 transition-all group">
                    <div class="flex items-center">
                        <input type="radio" name="sunflowerAddon" value="0" checked class="text-picnic-gold focus:ring-picnic-gold bg-transparent border-white/30 w-4 h-4">
                        <span class="ml-3 text-sm text-gray-300 group-hover:text-white font-medium">Solo Rosas</span>
                    </div>
                </label>
                <label class="flex items-center justify-between p-3 rounded-lg border border-white/10 hover:border-picnic-gold cursor-pointer bg-white/5 hover:bg-white/10 transition-all group">
                    <div class="flex items-center">
                        <input type="radio" name="sunflowerAddon" value="1" data-label="+ 1 Girasol" class="text-picnic-gold focus:ring-picnic-gold bg-transparent border-white/30 w-4 h-4">
                        <span class="ml-3 text-sm text-gray-300 group-hover:text-white font-medium">Agregar 1 Girasol</span>
                    </div>
                </label>
                <label class="flex items-center justify-between p-3 rounded-lg border border-white/10 hover:border-picnic-gold cursor-pointer bg-white/5 hover:bg-white/10 transition-all group">
                    <div class="flex items-center">
                        <input type="radio" name="sunflowerAddon" value="2" data-label="+ 2 Girasoles" class="text-picnic-gold focus:ring-picnic-gold bg-transparent border-white/30 w-4 h-4">
                        <span class="ml-3 text-sm text-gray-300 group-hover:text-white font-medium">Agregar 2 Girasoles</span>
                    </div>
                </label>
                <label class="flex items-center justify-between p-3 rounded-lg border border-white/10 hover:border-picnic-gold cursor-pointer bg-white/5 hover:bg-white/10 transition-all group">
                    <div class="flex items-center">
                        <input type="radio" name="sunflowerAddon" value="3" data-label="+ 3 Girasoles" class="text-picnic-gold focus:ring-picnic-gold bg-transparent border-white/30 w-4 h-4">
                        <span class="ml-3 text-sm text-gray-300 group-hover:text-white font-medium">Agregar 3 Girasoles</span>
                    </div>
                </label>
            </div>
            <div class="pt-2 sticky bottom-0 bg-[#0F1F38]">
                <button onclick="confirmRoseCart()" class="w-full py-3 bg-picnic-gold hover:bg-white text-picnic-navy font-bold text-xs uppercase tracking-[0.2em] rounded transition-all shadow-lg shadow-picnic-gold/20 transform hover:-translate-y-1">
                    Agregar a Cotización
                </button>
            </div>
        </div>
    </div>
</div>

<script is:inline>
    // --- LÓGICA DE INTERCAMBIO DE IMÁGENES ---
    window.swapImage = function(id) {
        const mainImg = document.getElementById(`main-img-${id}`);
        const detailImg = document.getElementById(`detail-img-${id}`);
        
        if(mainImg && detailImg) {
            // Guardamos el src temporalmente
            const tempSrc = mainImg.src;
            
            // Animación suave (Opcional)
            mainImg.style.opacity = '0.5';
            detailImg.style.opacity = '0.5';
            
            setTimeout(() => {
                mainImg.src = detailImg.src;
                detailImg.src = tempSrc;
                
                mainImg.style.opacity = '0.9'; // Vuelve a la opacidad normal de diseño
                detailImg.style.opacity = '1';
            }, 200);
        }
    };

    // --- LÓGICA MODAL ROSAS ---
    let currentRoseSelection = { name: "" };
    const roseModal = document.getElementById('roseModal');
    const roseModalContent = document.getElementById('roseModalContent');
    const titleEl = document.getElementById('modalRoseTitle');

    window.openRoseModal = function(roseName) {
        currentRoseSelection = { name: roseName };
        const radios = document.getElementsByName('sunflowerAddon');
        radios[0].checked = true;
        titleEl.textContent = roseName;
        roseModal.classList.remove('hidden');
        setTimeout(() => {
            roseModalContent.classList.remove('scale-95', 'opacity-0');
            roseModalContent.classList.add('scale-100', 'opacity-100');
        }, 10);
    }

    window.closeRoseModal = function() {
        roseModalContent.classList.remove('scale-100', 'opacity-100');
        roseModalContent.classList.add('scale-95', 'opacity-0');
        setTimeout(() => roseModal.classList.add('hidden'), 300);
    }

    window.confirmRoseCart = function() {
        const radios = document.getElementsByName('sunflowerAddon');
        let hasAddon = false;
        let addonLabel = "";
        for(const radio of radios) {
            if(radio.checked) {
                if(radio.value !== "0") {
                    hasAddon = true;
                    addonLabel = ` ${radio.getAttribute('data-label')}`;
                }
                break;
            }
        }
        const finalTitle = `${currentRoseSelection.name}${addonLabel}`;
        addToCart({
            title: finalTitle,
            price: "A cotizar",
            category: 'Flores',
            description: hasAddon ? 'Combo personalizado con girasoles' : 'Ramo clásico',
            image: hasAddon ? '/images/Lpstore/rosasGirasol.webp' : '/images/Lpstore/rosas.webp'
        });
        closeRoseModal();
    }
</script>