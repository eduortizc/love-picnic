---
// CheckOutForm.astro
---

<div id="checkoutModal" class="fixed inset-0 z-[200] hidden bg-black/50 backdrop-blur-md flex items-center justify-center p-4">
    
    <div class="bg-[#0F1F38] border border-picnic-gold rounded-2xl w-full max-w-md shadow-2xl relative overflow-hidden flex flex-col max-h-[90vh] animate-fade-in-up">
        
        <div class="p-6 border-b border-white/10 bg-[#0B1829]">
            <div class="flex justify-between items-center relative">
                <div class="w-full text-center">
                    <h3 class="text-picnic-gold font-serif text-xl uppercase tracking-widest">Datos del Evento</h3>
                    <p class="text-white/60 text-xs mt-1">Cuéntanos los detalles para tu cotización</p>
                </div>
                <button onclick="closeCheckout()" class="absolute right-0 top-0 text-white/30 hover:text-white transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
                </button>
            </div>
        </div>

        <div class="p-6 overflow-y-auto custom-scrollbar">
            <form id="reservationForm" class="space-y-4" onsubmit="event.preventDefault();">
                
                <div>
                    <label class="block text-white text-xs uppercase tracking-wider mb-2 font-bold">Tu Nombre *</label>
                    <input type="text" id="custName" required placeholder="Ej. Ana García" class="w-full bg-white/5 border border-white/20 rounded p-3 text-white text-sm focus:border-picnic-gold focus:outline-none transition-colors placeholder-white/20">
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div class="relative">
                        <label class="block text-white text-xs uppercase tracking-wider mb-2 font-bold">Fecha deseada *</label>
                        <input type="date" id="custDate" required class="w-full bg-white/5 border border-white/20 rounded p-3 text-white text-sm focus:border-picnic-gold focus:outline-none transition-colors [color-scheme:dark] cursor-pointer">
                    </div>
                    <div>
                        <label class="block text-white text-xs uppercase tracking-wider mb-2 font-bold">Hora deseada *</label>
                        <select id="custTime" required class="w-full bg-white/5 border border-white/20 rounded p-3 text-white text-sm focus:border-picnic-gold focus:outline-none transition-colors [&>option]:bg-[#0F1F38] cursor-pointer">
                            <option value="" disabled selected>Selecciona</option>
                            <option value="08:00 AM">08:00 AM</option>
                            <option value="08:30 AM">08:30 AM</option>
                            <option value="09:00 AM">09:00 AM</option>
                            <option value="09:30 AM">09:30 AM</option>
                            <option value="10:00 AM">10:00 AM</option>
                            <option value="10:30 AM">10:30 AM</option>
                            <option value="11:00 AM">11:00 AM</option>
                            <option value="11:30 AM">11:30 AM</option>
                            <option value="12:00 PM">12:00 PM</option>
                            <option value="12:30 PM">12:30 PM</option>
                            <option value="01:00 PM">01:00 PM</option>
                            <option value="01:30 PM">01:30 PM</option>
                            <option value="02:00 PM">02:00 PM</option>
                            <option value="02:30 PM">02:30 PM</option>
                            <option value="03:00 PM">03:00 PM</option>
                            <option value="03:30 PM">03:30 PM</option>
                            <option value="04:00 PM">04:00 PM</option>
                            <option value="04:30 PM">04:30 PM</option>
                            <option value="05:00 PM">05:00 PM</option>
                            <option value="05:30 PM">05:30 PM</option>
                            <option value="06:00 PM">06:00 PM</option>
                            <option value="06:30 PM">06:30 PM</option>
                            <option value="07:00 PM">07:00 PM</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block text-white text-xs uppercase tracking-wider mb-2 font-bold">Número de Personas *</label>
                    <select id="custGuests" class="w-full bg-white/5 border border-white/20 rounded p-3 text-white text-sm focus:border-picnic-gold focus:outline-none transition-colors [&>option]:bg-[#0F1F38]">
                        <option value="2">2 personas</option>
                        <option value="3-4">3-4 personas</option>
                        <option value="5-8">5-8 personas</option>
                        <option value="9-12">9-12 personas</option>
                        <option value="13+">Más de 12 personas</option>
                    </select>
                </div>

                <div class="bg-white/5 rounded p-4 border border-white/10">
                    <label class="block text-picnic-gold text-xs uppercase tracking-wider mb-3 font-bold border-b border-white/10 pb-2">Preguntar por:</label>
                    
                    <div class="space-y-3">
                        <label class="flex items-center space-x-3 cursor-pointer group">
                            <input type="checkbox" id="extraPhoto" class="form-checkbox h-5 w-5 text-picnic-gold rounded border-white/30 bg-transparent focus:ring-0 focus:ring-offset-0 transition duration-200 cursor-pointer">
                            <span class="text-white text-sm group-hover:text-picnic-gold transition-colors">Sesión de fotos y cobertura</span>
                        </label>
                        
                        <label class="flex items-center space-x-3 cursor-pointer group">
                            <input type="checkbox" id="extraReel" class="form-checkbox h-5 w-5 text-picnic-gold rounded border-white/30 bg-transparent focus:ring-0 focus:ring-offset-0 transition duration-200 cursor-pointer">
                            <span class="text-white text-sm group-hover:text-picnic-gold transition-colors">Sesión de fotos, cobertura, fotoclip y reel</span>
                        </label>
                    </div>
                </div>

                <div>
                    <label class="block text-white text-xs uppercase tracking-wider mb-2 font-bold">Lugar / Ubicación *</label>
                    <textarea id="custLocation" rows="2" required placeholder="Ej. Playa Progreso, Mi casa en el centro..." class="w-full bg-white/5 border border-white/20 rounded p-3 text-white text-sm focus:border-picnic-gold focus:outline-none transition-colors placeholder-white/20"></textarea>
                    <p class="text-picnic-gold text-[10px] mt-2 italic font-light flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3 h-3"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" /></svg>
                        Nota: Ubicaciones fuera de Mérida tienen costo extra.
                    </p>
                </div>

                <div>
                    <label class="block text-white text-xs uppercase tracking-wider mb-2 font-bold">¿Alguna petición especial?</label>
                    <textarea id="custMessage" rows="2" placeholder=" Ej.Quiero que mi picnic tenga los colores azul y rojo." class="w-full bg-white/5 border border-white/20 rounded p-3 text-white text-sm focus:border-picnic-gold focus:outline-none transition-colors placeholder-white/20"></textarea>
                </div>

                <p id="formError" class="text-red-400 text-xs text-center hidden font-bold bg-red-900/20 p-2 rounded border border-red-500/30">⚠️ Por favor completa los campos marcados con *</p>
            </form>
        </div>

        <div class="p-6 border-t border-white/10 bg-[#0B1829] flex gap-3">
             <button onclick="closeCheckout()" class="flex-1 py-3 border border-white/20 text-white/70 hover:bg-white/5 hover:text-white rounded uppercase text-xs tracking-widest transition-colors">
                Cancelar
            </button>
            
            <button onclick="submitReservation()" class="flex-[2] py-3 bg-picnic-gold hover:bg-white text-picnic-navy font-bold uppercase text-xs tracking-widest shadow-lg flex items-center justify-center gap-2 transition-all hover:-translate-y-1">
                <span>Enviar WhatsApp</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
            </button>
        </div>
    </div>
</div>

<style>
  @keyframes fadeInUp { from { opacity: 0; transform: translate3d(0, 20px, 0); } to { opacity: 1; transform: translate3d(0, 0, 0); } }
  .animate-fade-in-up { animation: fadeInUp 0.3s ease-out forwards; }
  .custom-scrollbar::-webkit-scrollbar { width: 4px; }
  .custom-scrollbar::-webkit-scrollbar-thumb { background: rgba(212, 175, 55, 0.4); border-radius: 10px; }
  .animate-shake { animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both; }
  @keyframes shake { 10%, 90% { transform: translate3d(-1px, 0, 0); } 20%, 80% { transform: translate3d(2px, 0, 0); } 30%, 50%, 70% { transform: translate3d(-4px, 0, 0); } 40%, 60% { transform: translate3d(4px, 0, 0); } }
  input[type="date"] { position: relative; }
  input[type="date"]::-webkit-calendar-picker-indicator {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;
  }
  
  .form-checkbox:checked {
      background-color: #D4AF37;
      border-color: #D4AF37;
      background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 16 16' fill='white' xmlns='http://www.w3.org/2000/svg'%3e%3cpath d='M12.207 4.793a1 1 0 010 1.414l-5 5a1 1 0 01-1.414 0l-2-2a1 1 0 011.414-1.414L6.5 9.086l4.293-4.293a1 1 0 011.414 0z'/%3e%3c/svg%3e");
  }
</style>

<script is:inline>
    const formatDate = (dateStr) => {
        if (!dateStr) return '';
        const [year, month, day] = dateStr.split('-');
        const date = new Date(year, month - 1, day);
        return date.toLocaleDateString('es-MX', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
    };

    const CART_KEY_FORM = 'lovePicnicCart';

    window.showCheckout = function() {
        const modal = document.getElementById('checkoutModal');
        if(modal) modal.classList.remove('hidden');
    }

    window.closeCheckout = function() {
        const modal = document.getElementById('checkoutModal');
        if(modal) modal.classList.add('hidden');
    }

    window.submitReservation = function() {
        try {
            const nameEl = document.getElementById('custName');
            const dateEl = document.getElementById('custDate');
            const timeEl = document.getElementById('custTime');
            const locationEl = document.getElementById('custLocation');
            const guestsEl = document.getElementById('custGuests');
            const messageEl = document.getElementById('custMessage');
            
            const extraPhotoEl = document.getElementById('extraPhoto');
            const extraReelEl = document.getElementById('extraReel');

            const errorMsg = document.getElementById('formError');

            const name = nameEl ? nameEl.value.trim() : '';
            const date = dateEl ? dateEl.value : '';
            const time = timeEl ? timeEl.value : '';
            const guests = guestsEl ? guestsEl.value : '2';
            const location = locationEl ? locationEl.value.trim() : '';
            const messageExtra = messageEl ? messageEl.value.trim() : '';
            
            const wantsPhoto = extraPhotoEl ? extraPhotoEl.checked : false;
            const wantsReel = extraReelEl ? extraReelEl.checked : false;

            if(!name || !date || !time || !location) {
                errorMsg.classList.remove('hidden');
                const content = document.querySelector('#checkoutModal > div');
                content.classList.add('animate-shake');
                setTimeout(() => content.classList.remove('animate-shake'), 500);
                return;
            }
            errorMsg.classList.add('hidden');

            let cart = [];
            try { cart = JSON.parse(localStorage.getItem(CART_KEY_FORM) || '[]'); } catch (e) { console.error(e); }

            // === 1. Obtener nombres de los items seleccionados para el mensaje ===
            let itemNames = "una experiencia Love Picnic";
            if (cart.length > 0) {
                itemNames = cart.map(item => item.title).join(', ');
            }

            // === 2. Construcción del Mensaje ===
            let message = `¡Hola Love Picnic! \u{1F9FA}\u{2728}\n\n`;
            
            // INTRODUCCIÓN CON DATOS CLAVE
            message += `Soy *${name}* y me gustaría agendar un *${itemNames}* para el *${formatDate(date)}* a las *${time}*.\n`;
            message += `Quiero cotizar todo el servicio y checar disponibilidad.\n\n`;
            
            // DETALLES ADICIONALES
             message += `\u{1F4C5} *Detalles del Evento:*\n`;
            message += `\u{1F465} *Personas:* ${guests}\n`;
            message += `\u{1F4CD} *Ubicación:* ${location}\n`;
            message += `\u{1F5D3} Fecha: ${formatDate(date)}\n`;
            message += `\u{23F0} Hora: ${time}\n`;

            // LISTA DE PEDIDOS (Sin sumar totales)
            message += `\u{1F4CB} *Detalle de Selección:* \n`;
            
            if (cart.length > 0) {
                cart.forEach(item => {
                    // Mostramos el nombre y el precio individual solo como referencia visual, 
                    // pero NO calculamos totales ni mostramos "Total Estimado"
                    message += `\u{25AB} ${item.title || 'Item'} (${item.price || ''})\n`;
                });
            } else {
                message += "_(Carrito vacío)_\n";
            }

            // EXTRAS
            if (wantsPhoto || wantsReel) {
                message += `\n\u{1F4F8} *Quisiera tener más información sobre:*`;
                if (wantsPhoto) message += `\n\u{2705} Sesión de fotos y cobertura`;
                if (wantsReel) message += `\n\u{2705} Sesión de fotos, cobertura, fotoclip y reel`;
            }

            // NOTAS
            if(messageExtra) {
                message += `\n\n\u{1F4DD} *Petición Especial:* ${messageExtra}`;
            }

            message += "\n\n\u{2705} *He leído y acepto las Políticas de Servicio.*";

            const phoneNumber = "529992326551"; 
            const url = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=${encodeURIComponent(message)}`;
            
            document.getElementById('checkoutModal').classList.add('hidden');
            window.open(url, '_blank');

        } catch (error) {
            console.error("Error:", error);
            alert("Error al procesar. Intenta de nuevo.");
        }
    }
</script>